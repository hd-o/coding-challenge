{
  "exclude": [
    "node_modules/"
  ],
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "lib": [
      "es6",
      "DOM"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}