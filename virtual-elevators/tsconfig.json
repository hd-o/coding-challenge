{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2019"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "jsx": "react-jsx"
  }
}