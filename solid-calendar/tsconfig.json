{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./modules/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],
  // 'next-env.d.ts' removed for better intellisense performance
  "include": [
    "index.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "tests/setup.ts"  ]
}
